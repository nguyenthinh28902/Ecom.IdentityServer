@using Ecom.IdentityServer.Models.Enums
@using Ecom.IdentityServer.Models.ViewModels.Accounts
@model SignInViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
@* Bọc body bằng flex để căn giữa toàn bộ trang *@
<body class="bg-[#fcfaff] flex items-center justify-center min-h-screen p-4">

    <div class="bg-white p-10 rounded-[40px] shadow-2xl w-full max-w-[500px] text-center border border-white">
        <h1 class="text-[#512bd4] text-4xl font-extrabold mb-2">Xin chào!</h1>
        <h2 class="text-[#512bd4] text-xl font-bold mb-4 uppercase">Hệ thống thương mại điện tử</h2>

        <div class="bg-[#f5f3ff] border border-[#ede9fe] rounded-3xl p-8 mb-6">
            <p class="text-gray-600 text-sm mb-6">Vui lòng đăng nhập bằng tài khoản Google.</p>

            @* Đưa Form vào trong div đã có class căn giữa *@
            @using (Html.BeginForm("GoogleSignIn", "Google", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ReturnUrl)
                <button type="submit" class="w-full bg-[#512bd4] hover:bg-[#4625b8] text-white font-bold py-4 rounded-xl flex items-center justify-center gap-3 transition duration-300 shadow-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48">
                        <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12s5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24s8.955,20,20,20s20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z" />
                        <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z" />
                        <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z" />
                        <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571l6.19,5.238C40.483,35.54,44,30.39,44,24C44,22.659,43.862,21.35,43.611,20.083z" />
                    </svg>
                    <span>Đăng nhập với Google</span>
                </button>
            }
        </div>
        <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">© 2026 Ecommerce</p>
    </div>
</body>
</html>