@using Ecom.IdentityServer.Models.ViewModels.Accounts
@using EcommerceIdentityServerCMS.Models.ViewModels.Accounts

@model SignInViewModel

@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập hệ thống";
    // Định nghĩa class chung cho các ô nhập liệu để gọn code
    var inputControlClass = "w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-[#42d392] focus:border-transparent transition";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-[#e0f7f0] to-[#ffffff] font-sans text-[#2c3e50]">

@*     <div class="absolute top-5 right-5 flex gap-2">
        <span class="px-3 py-1 bg-[#42d392] text-white rounded-md text-xs font-bold cursor-pointer">VN</span>
        <span class="px-3 py-1 bg-white border border-gray-200 text-gray-500 rounded-md text-xs font-bold cursor-pointer">EN</span>
    </div> *@

    <div class="bg-white p-10 rounded-[40px] shadow-2xl w-full max-w-[500px] text-center border border-white">

        <h1 class="text-[#42d392] text-4xl font-extrabold mb-2 tracking-tight">Xin chào!</h1>
        <h2 class="text-[#42d392] text-xl font-bold mb-4 uppercase tracking-wider">Hệ thống thương mại điện tử</h2>
        <p class="text-gray-400 italic mb-8">Chào mừng bạn đến với hệ thống CMS</p>

        <div class="bg-[#f0fdf9] border border-[#e2f2ed] rounded-3xl p-8 mb-6">
            <p class="text-gray-600 text-sm mb-6">Vui lòng đăng nhập thông qua hệ thống quản lý tài khoản trung tâm.</p>

            @using (Html.BeginForm("SignIn", "Auth", FormMethod.Post, new { @class = "space-y-5 text-left" }))
            {
                @Html.AntiForgeryToken()

                <div>
                    @Html.HiddenFor(m => m.ReturnUrl)
                    @Html.LabelFor(m => m.UserId, new { @class = "block text-sm font-semibold text-gray-700 mb-1" })
                    @Html.TextBoxFor(m => m.UserId, new {
                    @class = inputControlClass,
                                @type = "number",
                                @placeholder = "Nhập mã người dùng (ID)..."
                                })
                @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>

            <div>
                @Html.LabelFor(m => m.Password, new { @class = "block text-sm font-semibold text-gray-700 mb-1" })
                @Html.PasswordFor(m => m.Password, new {
                                @class = inputControlClass,
                                @placeholder = "Nhập mật khẩu..."
                                })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-500 text-xs mt-1" })
            </div>

            <button type="submit" class="w-full bg-[#00dc82] hover:bg-[#00c171] text-white font-bold py-4 rounded-xl flex items-center justify-center gap-2 transition duration-300 shadow-lg shadow-green-100 mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                </svg>
                Đăng nhập ngay
            </button>
                        }
        </div>

        <p class="text-[10px] text-gray-400 font-bold tracking-widest uppercase">
            © 2026 Ecommerce CMS - Powered by <span class="text-[#42d392]">Vue</span> & <span class="text-[#00dc82]">Nuxt 4</span>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}